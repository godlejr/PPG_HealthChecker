<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent" android:background="#ffffff">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sv"
            android:scrollbars="none" android:fadeScrollbars="false"
    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자율신경균형(ANB)"
                    android:id="@+id/anb" android:layout_gravity="right" android:textColor="#000000"
                    android:textSize="30px" android:layout_marginTop="70px" android:layout_marginBottom="10px"
                    android:layout_marginRight="90px"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:100"
                    android:id="@+id/ratio" android:layout_gravity="right" android:textColor="#000000"
                    android:textSize="48px" android:layout_marginBottom="20px" android:layout_marginRight="90px"/>
            <FrameLayout
                    android:layout_width="1080px"
                    android:layout_height="492px" android:id="@+id/fl_meter">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/gauge_back"/>
                <ImageView
                        android:layout_width="438px"
                        android:layout_height="49px"
                        android:id="@+id/needle" android:layout_gravity="bottom"
                        android:src="@drawable/gauge_meter" android:layout_marginLeft="126.5px"/>
            </FrameLayout>
            <TextView
                    android:layout_width="1080px"
                    android:layout_height="328px"
                    android:text="&quot;결과&quot;"
                    android:id="@+id/conclusion" android:layout_gravity="center_horizontal" android:textColor="#4cb3b6"
                    android:textSize="120px" android:gravity="center"/>
            <FrameLayout
                    android:layout_width="900px"
                    android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                    android:id="@+id/fl_0">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="교감신경 활성도(SNS)"
                        android:id="@+id/tv_0" android:layout_gravity="center_vertical" android:textSize="30px"
                        android:textColor="#151515"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LEVEL"
                        android:id="@+id/result_0" android:layout_gravity="center_vertical|right"
                        android:textSize="36px" android:textColor="#000000"/>
            </FrameLayout>
            <SeekBar
                    android:layout_width="900px"
                    android:layout_height="5px"
                    android:id="@+id/sb_0" android:layout_gravity="center_horizontal" android:thumb="@null"
                    android:thumbOffset="0px" android:padding="0px"
                    android:layout_marginTop="43px" android:layout_marginBottom="62px" android:maxHeight="4px"
                    android:progressDrawable="@drawable/seekbar_progress_gry_grn_rt"/>
            <FrameLayout android:layout_width="900px" android:layout_height="match_parent"
                         android:layout_gravity="center_horizontal" android:id="@+id/fl_1">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="부교감신경 활성도(PSNS)" android:id="@+id/tv_1"
                          android:layout_gravity="center_vertical" android:textSize="30px" android:textColor="#151515"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="LEVEL"
                          android:id="@+id/result_1" android:layout_gravity="center_vertical|right"
                          android:textSize="36px" android:textColor="#000000"/>
            </FrameLayout>
            <SeekBar android:layout_width="900px" android:layout_height="5px" android:id="@+id/sb_1"
                     android:layout_gravity="center_horizontal" android:thumb="@null" android:thumbOffset="0px"
                     android:padding="0px"
                     android:layout_marginTop="43px" android:layout_marginBottom="62px" android:maxHeight="4px"
                     android:progressDrawable="@drawable/seekbar_progress_gry_grn_rt"/>
            <FrameLayout android:layout_width="900px" android:layout_height="match_parent"
                         android:layout_gravity="center_horizontal" android:id="@+id/fl_2">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="자율신경 활성도(ANS)" android:id="@+id/tv_2"
                          android:layout_gravity="center_vertical" android:textSize="30px" android:textColor="#151515"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="LEVEL"
                          android:id="@+id/result_2" android:layout_gravity="center_vertical|right"
                          android:textSize="36px" android:textColor="#000000"/>
            </FrameLayout>
            <SeekBar android:layout_width="900px" android:layout_height="5px" android:id="@+id/sb_2"
                     android:layout_gravity="center_horizontal" android:thumb="@null" android:thumbOffset="0px"
                     android:padding="0px"
                     android:layout_marginTop="43px" android:layout_marginBottom="62px" android:maxHeight="4px"
                     android:progressDrawable="@drawable/seekbar_progress_gry_grn_rt"/>
            <FrameLayout android:layout_width="900px" android:layout_height="match_parent"
                         android:layout_gravity="center_horizontal" android:id="@+id/fl_3">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="심박변이도(HRV)" android:id="@+id/tv_3"
                          android:layout_gravity="center_vertical" android:textSize="30px" android:textColor="#151515"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="LEVEL"
                          android:id="@+id/result_3" android:layout_gravity="center_vertical|right"
                          android:textSize="36px" android:textColor="#000000"/>
            </FrameLayout>
            <SeekBar android:layout_width="900px" android:layout_height="5px" android:id="@+id/sb_3"
                     android:layout_gravity="center_horizontal" android:thumb="@null" android:thumbOffset="0px"
                     android:padding="0px"
                     android:layout_marginTop="43px" android:layout_marginBottom="62px" android:maxHeight="4px"
                     android:progressDrawable="@drawable/seekbar_progress_gry_grn_rt"/>
            <TextView
                    android:layout_width="653px"
                    android:layout_height="100px"
                    android:text="다시 측정하기"
                    android:id="@+id/complete" android:layout_gravity="center_horizontal" android:gravity="center"
                    android:textColor="#ffffff" android:textSize="40px" android:layout_marginTop="38px"
                    android:layout_marginBottom="150px" android:background="@drawable/ppg_startmeasure"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>