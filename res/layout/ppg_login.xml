<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
             android:background="#f5f5f5">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/splash" android:layout_gravity="center" android:src="@drawable/ppg_demand"
            android:visibility="visible"
        android:padding="130dp" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/ll_login" android:visibility="gone">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/upper_logo" android:layout_gravity="center_horizontal"
                android:src="@drawable/ppg_logo"
            android:layout_weight="0.8" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:paddingLeft="50dp"
                android:paddingRight="50dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:id="@+id/tv_id"
                    android:textColor="#858585"
                    android:layout_margin="0dp"
                    android:textSize="16sp" />

                <EditText
                        android:layout_width="match_parent"
                    android:id="@+id/et_id" android:background="@null"
                    android:textColorHint="#b4bdc2"
                        android:textSize="16sp" android:gravity="left|center_vertical" android:textColor="#4CA9B1"
                        android:inputType="textVisiblePassword"
                        android:imeOptions="flagNoExtractUi"
                    android:layout_margin="0dp"
                    android:layout_height="35dp" />

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/line_0"
                        android:src="@drawable/underline_grey" android:layout_marginLeft="100px"
                        android:layout_marginRight="100px" android:layout_marginBottom="30px"
                    android:layout_margin="0dp" />

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Password"
                          android:id="@+id/tv_pw"
                    android:textColor="#858585"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp" />

                <EditText android:layout_width="match_parent"
                    android:id="@+id/et_pw"
                          android:background="@null"
                    android:textColorHint="#b4bdc2" android:inputType="textPassword" android:ems="10"
                          android:imeOptions="flagNoExtractUi" android:textColor="#4CA9B1" android:textSize="16sp"
                          android:gravity="left|center_vertical"
                    android:layout_height="35dp" />

                <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/line_1"
                           android:src="@drawable/underline_grey" />
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                android:id="@+id/ll_auto"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_gravity="top"
                    android:paddingLeft="50dp"
                    android:layout_height="25dp">

                    <ImageView
                        android:layout_height="match_parent"
                            android:id="@+id/checkbox" android:src="@drawable/check_0"
                        android:layout_width="35dp" />

                    <TextView
                        android:text="자동로그인"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_auto"
                        android:layout_weight="1"
                        android:textColor="#858585"
                        android:gravity="center_vertical"
                        android:textSize="16sp" />

                </LinearLayout>

                <Button
                        android:layout_width="match_parent"
                    android:text="로그인"
                        android:id="@+id/login" android:layout_gravity="bottom|center_horizontal" android:textColor="#fff"
                        android:textSize="20sp" android:gravity="center"
                    android:visibility="visible"
                    android:background="@drawable/round_corner"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="70dp"
                    android:layout_height="40dp"
                    android:focusable="true"
                    android:clickable="true" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아이디/암호찾기"
                        android:id="@+id/tv_find" android:visibility="gone" android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:text="회원가입"
                    android:id="@+id/join" android:layout_gravity="center_horizontal" android:textColor="#444444"
                    android:textSize="50px" android:gravity="center" android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>

